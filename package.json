{
  "name": "byles-styles",
  "version": "1.0.0",
  "description": "Byles Style Guide",
  "main": "index.js",
  "scripts": {
    "scss:watch": "node-sass scss -o public && node-sass -w scss -o public --source-map public",
    "scss:build": "node-sass scss -o dist --output-style compressed",
    "js:watch": "babel ./js --out-file public/byles-styles.js -w --source-maps",
    "js:build": "babel ./js --out-file dist/byles-styles.js",
    "start": "concurrently --kill-others \"node server.js --watch public\" \"npm run scss:watch\" \"npm run js:watch\"",
    "build": "npm run scss:build && npm run js:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndrewByles/byles-styles.git"
  },
  "keywords": [
    "style",
    "guide",
    "design",
    "sass",
    "css"
  ],
  "author": "Andrew Byles",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AndrewByles/byles-styles/issues"
  },
  "homepage": "https://github.com/AndrewByles/byles-styles#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "node-sass": "^4.7.2"
  }
}
